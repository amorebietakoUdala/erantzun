{% extends 'base.html.twig' %}

{% block title %}
	{{"messages.erabiltzaileen" | trans | capitalize}}
	{{"messages.zerrenda" | trans | capitalize}}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('erabiltzailea_edit') }}
{% endblock stylesheets %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('erabiltzailea_edit') }}
{% endblock javascripts %}

{% block body %}
	<div class="container">
		<div class="row">
			<div id="arduradunaren_datuak" class="card margin-top-13 col-6">
				<div class="card-block col">
					<div class="text-center">
						<div id="arduradun_titulua" class="text-primary">{{"messages.erabiltzailea" | trans | capitalize}}
							{{"messages.editatu" | trans | capitalize}}</div>
						<hr class="mt-1 mb-1">
					</div>
					<div class="card-text">
						{{ include('admin/erabiltzailea/_form.html.twig', {
							'gordeBotoia': true,
							'password_change': true 
			    	}) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}