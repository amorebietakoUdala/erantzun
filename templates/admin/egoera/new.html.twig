{% extends 'base.html.twig' %}

{% block title %}
	{{"messages.egoera" | trans | capitalize}}
	{{"messages.berria" | trans | capitalize}}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
		{{ encore_entry_link_tags('egoera_edit') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
		{{ encore_entry_script_tags('egoera_edit') }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div id="egoeraren_datuak" class="card margin-top-13 col-6">
				<div class="card-block col">
					<div class="text-center">
						<div id="egoeraren_titulua" class="text-primary">{{"messages.egoera" | trans | capitalize}}
							{{"messages.berria" | trans | capitalize}}</div>
						<hr class="mt-1 mb-1">
					</div>
					<div class="card-text">
						{{ include('admin/egoera/_form.html.twig',{
				'gordeBotoia': true 
			    }) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}