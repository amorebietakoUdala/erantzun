{% extends 'base.html.twig' %}

{% block title %}
	{{"messages.eskakizun_mota" | trans | capitalize}}
	{{"messages.berria" | trans | capitalize}}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('eskakizun_mota_edit') }}
{% endblock stylesheets %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('eskakizun_mota_edit') }}
{% endblock javascripts %}


{% block body %}
	<div class="container">
		<div class="row">
			<div id="eskakizun_mota_datuak" class="card margin-top-13 col-6">
				<div class="card-block col">
					<div class="text-center">
						<div id="eskakizun_mota_titulua" class="text-primary">{{"messages.eskakizun_mota" | trans | capitalize}}
							{{"messages.berria" | trans | capitalize}}</div>
						<hr class="mt-1 mb-1">
					</div>
					<div class="card-text">
						{{ include('admin/eskakizun_mota/_form.html.twig',{
				'gordeBotoia': true 
			    }) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}