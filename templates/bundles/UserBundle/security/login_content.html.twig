{% trans_default_domain 'user_bundle' %}


{% block message %}
	{% for msg in app.session.flashBag.get('error') %}
		<div>
			{{ msg | trans}}
		</div>
	{% endfor %}
	{% for msg in app.session.flashBag.get('success') %}
		<div>
			{{ msg | trans}}
		</div>
	{% endfor %}
{% endblock message %}


{% block user_content %}
	<div class="container margin-top-13">
		<div class="col">
			<div class="container col-lg-5 col-md-5 primary-color rounder-edge padding-08">
				<form class="login-form" action="{{ path("user_security_login_check") }}" method="post">
					{% if csrf_token %}
						<input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
					{% endif %}

					<div class="form-group">
						<label for="username">{{ 'user.username'| trans }}</label>
						<input class="form-control" type="text" id="username" name="username" value="{{ last_username }}" required="required"/>
					</div>


					<div class="form-group">
						<label for="password">{{ 'user.password' | trans | capitalize }}</label>
						<input class="form-control" type="password" id="password" name="password" required="required"/>
					</div>

					<div class="form-group form-inline">
						<input class="form-inline" type="checkbox" id="remember_me" name="remember_me" value="on"/>&nbsp;
						<label class="form-control form-inline login-form" for="remember_me">{{ 'security.login.remember_me'| trans | capitalize}}</label>
					</div>

					<div class="container-fluid row">
						<div class="container-fuild col text-center">
							<button type="submit" class="btn btn-default">{{ 'btn.security.login.submit'| trans | capitalize}}</button>
						</div>
					</div>
					<div
						class="margin-top-13">{# <a href="{{ path('fos_user_resetting_request') }}">{{ 'security.login.remember_password' | trans | capitalize  }}</a> #}
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
